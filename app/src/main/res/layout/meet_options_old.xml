<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mode_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Choose your mode of transport and nature of the meeting"
        android:textAppearance="?android:attr/textAppearanceSmall"></TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/transport_mode_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp">

            <RadioButton
                android:id="@+id/g1a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="walk"></RadioButton>

            <RadioButton
                android:id="@+id/g1a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bike"></RadioButton>

            <RadioButton
                android:id="@+id/g1a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="public trasport"></RadioButton>

            <RadioButton
                android:id="@+id/g1a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="car"></RadioButton>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/meeting_nature_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/g2a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eating"></RadioButton>

            <RadioButton
                android:id="@+id/g2a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="drinking"></RadioButton>

            <RadioButton
                android:id="@+id/g2a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="talking"></RadioButton>

            <RadioButton
                android:id="@+id/g2a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="picking up"></RadioButton>

            <RadioButton
                android:id="@+id/g2a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shopping"></RadioButton>

            <RadioButton
                android:id="@+id/g2a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="party"></RadioButton>

            <RadioButton
                android:id="@+id/g2a7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entertainment"></RadioButton>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"></Button>

        <Button
            android:id="@+id/list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="list"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/session_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="session mode: "></TextView>

        <TextView
            android:id="@+id/my_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="chosen transport mode: "></TextView>

        <TextView
            android:id="@+id/chosen_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="chosen meeting's nature: "></TextView>

        <TextView
            android:id="@+id/my_coord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="your coordinates: "></TextView>

        <TextView
            android:id="@+id/inter_coord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="interlocutor's coordinates: "></TextView>

        <TextView
            android:id="@+id/inter_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="interlocutor's transport mode: "></TextView>

        <TextView
            android:id="@+id/info_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</LinearLayout>